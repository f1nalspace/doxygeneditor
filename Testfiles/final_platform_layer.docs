				fplConsoleFormatOut("OpenGL version: %s\n", version);
				fplConsoleFormatOut("OpenGL vendor: %s\n", vendor);
				fplConsoleFormatOut("OpenGL renderer: %s\n", renderer);
				RunModern();
				fplPlatformRelease();
				result = 0;
			} else {
				result = -1;
			}
			return(result);
		}
